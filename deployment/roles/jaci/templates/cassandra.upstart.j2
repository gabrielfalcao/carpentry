description     "Cassandra Master"

start on (started networking)

respawn
respawn limit 5 60

pre-stop exec docker stop jacicassandra
pre-stop exec sleep 2
pre-stop exec docker kill -s 9 jacicassandra
pre-stop exec sleep 3
pre-stop exec docker rm -f jacicassandra

exec docker run \
        --rm \
        --name jacicassandra \
        -e CASSANDRA_LISTEN_ADDRESS=localhost \
        --net=host \
        -p 9160 \
        -p 9042 \
        -u root \
        -v /srv/jaci/data:/var/lib/cassandra/data \
        -v /var/log \
        cassandra
