upstream jaci {
         server 127.0.0.1:5000;
}

server {
    listen 9000 default;

    server_name localhost;

    access_log /var/log/nginx/jaci-access.log timed_combined;
    error_log /var/log/nginx/jaci-error.log;

    client_body_timeout 8;
    client_header_timeout 4;
    send_timeout 4;

    location / {
        # We only accept HLS chunks via POST
        proxy_set_header           Host $http_host;
        proxy_set_header           X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_redirect             off;
        proxy_pass                 http://jaci;
    }
}
